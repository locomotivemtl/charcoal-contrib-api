{
    "type": "library",
    "name": "locomotivemtl/charcoal-contrib-api",
    "description": "Charcoal pacakge used for creating an API.",
    "keywords": [
        "charcoal",
        "api"
    ],
    "homepage": "https://locomotivemtl.github.io/charcoal-contrib-api/",
    "license": "MIT",
    "authors": [
        {
            "name": "Locomotive",
            "homepage": "https://locomotive.ca"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        }
    },
    "require": {
        "php": ">=7.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Charcoal\\": "src/Charcoal/"
        }
    },
    "scripts": {
        "phplint": "find {src,tests} -name '*.php' -print0 | xargs -0 -n1 -P8 php -l | grep -v '^No syntax errors detected'; test $? -eq 1",
        "phpcs": "php vendor/bin/phpcs -ps --colors src/ tests/",
        "phpcbf": "php vendor/bin/phpcbf -ps --colors src/ tests/"
    }
}
